<! DOCTYPE html>
<html lang = "en">

<head>
    <meta charset="UTF-8">
    <title>DELETE</title>
</head>
<body>

    <h2>Editar</h2>
    <% data.forEach(function(details) { %>

        <form action="/edit/<%= details._id %>" method="POST">

                <input action="/edit/<%= details._id %>">
                <input action="/edit/<%= details.nome %>" name = "nome">
                <input action="/edit/<%= details.cpf %>" name = "cpf">
                <input action="/edit/<%= details.cep %>" name = "cep">
                <input action="/edit/<%= details.rua %>" name ="rua">
                <input action="/edit/<%= details.numero %>" name ="numero">
                <input action="/edit/<%= details.bairro%>" name="bairro">

            <button><a href="/show">Todos</a></button>
            <button type="submit">Editar</button>
        
        
        </form>



    <%}) %>
</body>


</html>